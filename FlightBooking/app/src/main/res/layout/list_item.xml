<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_bg"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

         <TextView
            android:id="@+id/txt_fl_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp" />

        <TextView
            android:id="@+id/txt_fl_townFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_id"
            android:padding="6dp" />

        <TextView
            android:id="@+id/txt_fl_townTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_townFrom"
            android:padding="6dp" />
        <TextView
            android:id="@+id/txt_fl_dateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_townTo"
            android:padding="6dp" /> 



        <TextView
            android:id="@+id/txt_fl_dateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_dateFrom"
            android:padding="6dp" />



        <ImageButton  
        android:id="@+id/imageButton1" 
        android:src="@drawable/comment"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/txt_fl_dateTo"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:clickable="true"
        android:onClick="onClick"

            />

         <ImageButton  
        android:id="@+id/imageButton2" 
        android:src="@drawable/star"
        android:layout_width="50dp"
        android:layout_height="30dp"
             android:layout_centerInParent="true"
             android:layout_toRightOf="@+id/imageButton1"
             android:adjustViewBounds="true"
         android:scaleType="centerInside"
        android:padding="0dp"
        android:clickable="true"
        android:onClick="onClick" />


        <ImageButton  
        android:id="@+id/imageButton3" 
        android:src="@drawable/mapp"
        android:layout_width="50dp"
        android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/imageButton2"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
        android:padding="0dp"
        android:clickable="true"
        android:onClick="onClick" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/layout_item"
        android:visibility="gone">


        <Button

            android:layout_marginLeft="39dp"
            android:layout_marginTop="6dp"
            android:id="@+id/star1"
            android:clickable="true"
            android:background="@drawable/star_empty"
            android:onClick="onClick"
            android:layout_height="28dp"
            android:layout_width="28dp">

        </Button>

        <Button
            android:layout_marginTop="6dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/star2"
            android:background="@drawable/star_empty"
            android:layout_height="28dp"
            android:layout_width="28dp">

        </Button>

        <Button
            android:layout_marginTop="6dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/star3"
            android:background="@drawable/star_empty"
            android:layout_height="28dp"
            android:layout_width="28dp">
        </Button>

        <Button
            android:layout_marginTop="6dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/star4"
            android:background="@drawable/star_empty"
            android:layout_height="28dp"
            android:layout_width="28dp">
        </Button>

        <Button
            android:layout_marginTop="6dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/star5"
            android:background="@drawable/star_empty"
            android:layout_height="28dp"
            android:layout_width="28dp">
        </Button>

        <Button
            android:layout_marginTop="6dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/arrowUp"
            android:layout_gravity="right"
            android:background="@drawable/arrowup"
            android:layout_height="28dp"
            android:layout_width="28dp">
        </Button>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_item"
        android:background="@color/view_divider_color" />

</RelativeLayout>