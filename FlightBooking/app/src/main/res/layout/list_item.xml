<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_bg"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

         <TextView
            android:id="@+id/txt_fl_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp" />

        <TextView
            android:id="@+id/txt_fl_townFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_id"
            android:padding="6dp" />

        <TextView
            android:id="@+id/txt_fl_townTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_townFrom"
            android:padding="6dp" />
        <TextView
            android:id="@+id/txt_fl_dateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_townTo"
            android:padding="6dp" /> 



        <TextView
            android:id="@+id/txt_fl_dateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_fl_dateFrom"
            android:padding="6dp" />



        <ImageButton  
        android:id="@+id/imageButton1" 
        android:src="@drawable/comment"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/txt_fl_dateTo"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="0dp"
        android:clickable="true"
        android:onClick="onClick"

            />

         <ImageButton  
        android:id="@+id/imageButton2" 
        android:src="@drawable/mark"
        android:layout_width="50dp"
        android:layout_height="30dp"
             android:layout_centerInParent="true"
             android:layout_toRightOf="@+id/imageButton1"
             android:adjustViewBounds="true"
         android:scaleType="centerInside"
        android:padding="0dp"
        android:clickable="true"
        android:onClick="onClick" />

        <ImageButton  
        android:id="@+id/imageButton3" 
        android:src="@drawable/mapp"
        android:layout_width="50dp"
        android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/imageButton2"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
        android:padding="0dp"
        android:clickable="true"
        android:onClick="onClick" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_item"
        android:background="@color/view_divider_color" />

</RelativeLayout>