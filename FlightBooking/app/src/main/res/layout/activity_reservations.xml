<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/scrollView1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/registration_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/registration_form"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="#e0e0d1"
                    android:checked="true"
                    android:text="Return"
                    android:textColor="#e0e0d1"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:background="#e8e8e7"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/marker" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:background="#e8e8e7"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/from"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#f3f3f3"
                        android:hint="From"
                        android:paddingLeft="5dp"
                        android:completionThreshold="1"
                        android:inputType="textNoSuggestions"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:background="#e8e8e7"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/marker" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:background="#e8e8e7"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/to"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#f3f3f3"
                        android:hint="To"
                        android:paddingLeft="5dp"
                        android:completionThreshold="1"
                        android:inputType="textNoSuggestions"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:background="#e8e8e7"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/calendar" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentTop="true"
                    android:background="#e8e8e7"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dateDepart"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="#e8e8e7"
                        android:text="Depart"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/returnLayout"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:background="#e8e8e7"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/calendar" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_alignParentTop="true"
                    android:background="#e8e8e7"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dateReturn"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="#e8e8e7"
                        android:text="Return" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:gravity="end"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="205dp"
                    android:layout_height="38dp"
                    android:layout_alignParentTop="true"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:background="#e8e8e7">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="false"
                        android:cropToPadding="false"
                        android:src="@drawable/person"
                        android:background="#e8e8e7"/>

                    <TextView
                        android:id="@+id/personsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Persons:"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/personsSpinner"
                        android:layout_width="80dp"
                        android:layout_height="38dp"></Spinner>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="45dp">

                <Button
                    android:id="@+id/findButton"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#13b586"
                    android:text="Find"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>